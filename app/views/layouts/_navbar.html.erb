<% props = {
    isLogged: user_signed_in?,
    user_name: user_signed_in? ? current_user.name : ""
  }.to_json
%>

<header class="navbar" id="navbar">
  <nav class="left-content">
    <%= link_to 'BancoDeTiempo', root_path, class: 'brand' %>
    <% if user_signed_in? then %>
      <%= link_to 'Servicios', services_path, class: 'service_link' %>
    <% end %>
  </nav>
  <div id="session_actions" data="<%= props %>"> </div>
</header>