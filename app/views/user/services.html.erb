<h2>Mis Servicios</h2>
<%= link_to 'Nuevo Servicio', new_service_path, class: 'new_service_button' %>

<div class="services-list">
  <% @services.each do |service| %>
    <article id="service_<%= service.id %>" class="service_post">
      <div class="service_header">
        <p class="service_name name"><%= service.name %></p>
        <div class="actions">
          <%= link_to 'Editar', edit_service_path(service), class: 'edit_service' %>
          <%= button_to 'Eliminar', service_path(service), class: 'delete_service', method: :delete, remote: true %>
        </div>
      </div>
      <div class="service_content">
        <p><strong>Descripci√≥n: </strong><span class="service_description"><%= service.description %></span></p>
      </div>
    </article>
  <% end %>
</div>

