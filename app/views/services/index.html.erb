<h2>Servicios</h2>
<span id="service-filter"></span>
<div class="services-list">
  <% @services.each do |service| %>
    <article id="service_<%= service.id %>" class="service_post border rounded pr-3 pl-3 pb-2 mb-4">
      <div class="service_header d-flex align-items-center justify-content-between">
        <h3 class="service_name"><%= service.name %></h3>
      </div>
      <div class="service_content border-top border-dark pt-1">
        <p><strong>Descripci√≥n: </strong><span class="service_description"><%= service.description %></span></p>
      </div>
      <div class="action-container">
        <div class="transaction_action" data-service-data="<%= { service_asked: current_user.have_transaction?(service),
                                                                 service_id: service.id }.to_json %>"></div>
      </div>
    </article>
  <% end %>
</div>
<ul class="service_pagination pagination">
  <% @pages.each do |page| %>
    <li class="page-item">
    <%= link_to page, request.params.merge(page: page), class: 'page-link'%>
    </li>
  <% end %>
</ul>