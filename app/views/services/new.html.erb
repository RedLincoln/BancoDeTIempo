    <h4>Errores</h4>
    <ul class="errors">
    <% @service.errors.each do |key, message| %>
      <li class="error_<%= key %>"><%= key %>: <%= message %></li>
    <% end %>
    </ul>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Nombre' %><br />
    <%= f.text_field :name, autofocus: true , cols: 40%>
  </div>

  <div class="field">
    <%= f.label :description, 'DescripciÃ³n' %><br />
    <%= f.text_area :description, cols: 40, rows: 4%>
  </div>

