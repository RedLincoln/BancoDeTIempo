form = document.querySelector('form')
errors = document.querySelector('form .errors') ?
    document.querySelector('form .errors').parentElement :
    document.createElement('div')

errors.innerHTML = "<%= j render 'shared/errors', record: @service%>"
form.insertBefore(errors, form.firstChild)

flashMessage = document.getElementById('flash-messages')
flashMessage.classList.remove('translate-animation')
flashMessage.innerHTML = "<%= j render 'shared/flash' %>"

setTimeout(function(){
    flashMessage.classList.add('translate-animation')
})




